.section-module {
    background: #fff;
}
.section-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #f8f8f8;
    position: relative;
}
.section-item image {
    margin: 3vw;
    width: 6vw; height: 6vw;
    background: transparent;
}
.section-item view {
    width: 60vw;
}
.section-module span {
    margin-right: 3vw;
    width: 20vw;
    text-align: right;
}
.section-item span:after {
    content: " ";
    display: inline-block;
    width: 8px; height: 8px;
    border-width: 2px 2px 0 0;
    border-style: solid;
    border-color: #b2b2b2;
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
}

.rich-text {
  width: 700rpx;
  padding: 25rpx;
  background: #fff;
  font-size: 12pt;
}
.rich-text view {
  line-height: 2rem;
  text-indent: 2em;
}
